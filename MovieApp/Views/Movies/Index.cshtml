@model PaginationViewModel<Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                ReleaseYear
            </th>
            <th>
                MovieLink
            </th>
            <th>
                ImagePath
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseYear)
            </td>
            <td>
                <a href="@Html.DisplayFor(modelItem=>item.MovieLink)" > @Html.DisplayFor(modelItem => item.MovieLink)</a>
            </td>
            <td>
                <img src= "@item.ImagePath" height="200px" width="200px">
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="pagination-container">
<div class="pagination">
    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        if (i == Model.PageNumber)
        {
            <a href="@Url.Action("Index", new { pageNumber = i })" class="active">@i</a>
        }
        else
        {
            <a href="@Url.Action("Index", new { pageNumber = i })">@i</a>
        }
    }
</div>
</div>

<style>
    .pagination-container{
        display:flex;
        justify-content:center;
        margin-top:20px;
    }
    .pagination {
        margin-top: 20px;
    }

        .pagination a {
            color: #333;
            text-decoration: none;
            padding: 5px 10px;
            border: 1px solid #ccc;
            margin-right: 5px;
        }

            .pagination a.active {
                background-color: #007bff;
                color: #fff;
                border-color: #007bff;
            }
</style>
