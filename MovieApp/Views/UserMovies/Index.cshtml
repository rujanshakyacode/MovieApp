@model PaginationViewModel<Movie>

    @if(Model=!null){
<div class="container">
    <div class="row">
        @foreach (var item in Model.Items)
        {
            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <img src="@item.ImagePath" class="card-img-top" alt="Image 1">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">(@item.ReleaseYear)</p>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="pagination-container">
        <div class="pagination">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.PageNumber)
                {
                    <a href="@Url.Action("Index", new { pageNumber = i })" class="active">@i</a>
                }
                else
                {
                    <a href="@Url.Action("Index", new { pageNumber = i })">@i</a>
                }
            }
        </div>
    </div>
        </div>
}
else
{
    <h1>No movies found</h1>    
}
